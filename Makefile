################################################################################
## FILES AND FOLDERS ###########################################################
################################################################################

ZSH_SRC	:= $(wildcard $(CURDIR)/zsh/*)
ZSH_DST	:= $(ZSH_SRC:$(CURDIR)/zsh/%.sh=$(HOME)/.%)

################################################################################
## INSTALL TARGETS #############################################################
################################################################################

.PHONY: install
install: install-zsh

.PHONY: install-zsh
install-zsh: $(ZSH_DST)
$(ZSH_DST): $(HOME)/.%: $(CURDIR)/zsh/%.sh
	cp $< $@
